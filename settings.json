{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__agent-mcp-gateway__get_server_tools",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$HOOK_INPUT\" | jq '. + {max_schema_tokens: 5000}' | jq -c '{hookSpecificOutput: {hookEventName: \"PreToolUse\", permissionDecision: \"allow\", updatedInput: .}}'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/post-tool-session-note.mjs"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/semantic-hydration.mjs"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/session-start-restore.mjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/context-check.mjs"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "mcp__cognitive-memory__*",
      "mcp__agent-mcp-gateway__*",
      "mcp__qmd__*",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(node *)",
      "Bash(bun *)"
    ]
  },
  "env": {
    "MCP_TOOL_TIMEOUT": "120000"
  }
}
