{
  "hooks": {
    "PostToolUse": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/post-tool-session-note.sh"
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/semantic-hydration.sh"
      }
    ],
    "SessionStart": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/session-start-restore.sh"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash ~/.claude/hooks/context-check.sh"
      }
    ]
  },
  "permissions": {
    "allow": [
      "mcp__cognitive-memory__*",
      "mcp__agent-mcp-gateway__*",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(node *)"
    ]
  },
  "env": {
    "MCP_TOOL_TIMEOUT": "120000"
  }
}
